<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="82"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="120">

        <androidx.cardview.widget.CardView
            android:id="@+id/deathCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#000000"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deathText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="..."
                    android:textColor="#FFFFFF"
                    android:textSize="42dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total deaths"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/caseCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:layout_weight="30"
            android:orientation="vertical"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#E0E0E0"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/caseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="..."
                    android:textColor="#000000"
                    android:textSize="42dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total cases"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/recoverCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="30"
            android:orientation="vertical"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#31D3E6"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recoverText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="..."
                    android:textColor="#FFFFFF"
                    android:textSize="42dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total recovered"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/countryCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:layout_weight="30"
            android:orientation="vertical"
            app:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#E0E0E0"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:id="@+id/countryName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:text="Your country"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="75">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="50"
                            android:orientation="vertical"
                            android:weightSum="30">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="10"
                                android:text="Total cases:"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="10"
                                android:text="Total deaths:"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:text="Total recovered:"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="50"
                            android:orientation="vertical"
                            android:weightSum="30">

                            <TextView
                                android:id="@+id/countryCase"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="10"
                                android:gravity="end"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/countryDeath"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="10"
                                android:gravity="end"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/countryRecovered"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:gravity="end"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <Button
        android:id="@+id/countryReportCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:layout_weight="9"
        android:background="#000000"
        android:text="Country wise report"
        android:textColor="#FFFFFF"
        android:textSize="22dp">

    </Button>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="9"
        android:orientation="horizontal"
        android:weightSum="20">

        <Button
            android:id="@+id/aboutCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:layout_weight="10"
            android:background="#E0E0E0"
            android:text="About"
            android:textColor="#000000"
            android:textSize="18dp">

        </Button>

        <Button
            android:id="@+id/refreshCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:layout_weight="10"
            android:background="#E0E0E0"
            android:text="Refresh"
            android:textColor="#000000"
            android:textSize="18dp">

        </Button>

    </LinearLayout>

</LinearLayout>
